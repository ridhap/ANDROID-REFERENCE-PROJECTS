<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/colour_three"
    android:padding="20dp"
    android:orientation="vertical"
    >

    <Button
        android:layout_width="110dp"
        android:layout_height="wrap_content"
        android:text="SELECT DATE"
        android:layout_marginStart="10dp"
        android:id="@+id/btn_date"
        android:layout_marginTop="10dp"
        android:background="@drawable/rounded_corners"
        />


    <EditText
        android:id="@+id/in_date"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginStart="10dp" />

    <Button
        android:layout_width="140dp"
        android:layout_height="wrap_content"
        android:text="select course"
        android:onClick="onShowClicked"
        android:layout_marginTop="10dp"
        android:layout_marginStart="10dp"
        android:background="@drawable/rounded_corners"
        />
    <EditText
        android:id="@+id/courseForStudent"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginStart="10dp"
        android:background="@drawable/edstyle"
        android:layout_marginTop="10dp"
        />
    <Button
        android:id="@+id/button1"
        android:layout_width="60dp"
        android:layout_height="50dp"
        android:text="ok"
        android:layout_marginTop="10dp"
        android:onClick="onOkClicked"
        android:layout_marginStart="10dp"
        android:background="@drawable/rounded_corners"

        />

    <TextView               android:layout_marginStart="10dp"
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="The Students Present Are-"
        />

    <ListView
        android:id="@+id/listView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp" />
</LinearLayout>